@model IEnumerable<CinemaTown.Models.Movie>
@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .dataTables_filter {
        display: flex;
        flex-direction: row;
        justify-content: end;
        margin-bottom: 3%;
    }

    .pagination {
        display: flex;
        flex-direction: row;
        justify-content: end;
    }
</style>

<h2>Movies</h2>

<br />
<br />
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
            <th>In Stock</th>

        </tr>
    </thead>
    <tbody>
    </tbody>

</table>

@section scripts
  {
    <script>
       $(document).ready(function () {
           let table = $("#movies").DataTable({
               ajax: {
                   url: "/api/movies",
                   dataSrc: ""
               },
               columns: [
                   {
                       data: "name",
                       render: function (data, type, movie) {
                           return "<a href='/movies/details/" + movie.id + "'>" + movie.name + "</a>";
                       }
                   },
                   {
                       data: "genre.name"
                   },
                   {
                       data: "inStock"
                   }
               ]
           });

          
       });
    </script>
}

