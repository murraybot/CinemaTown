@model CinemaTown.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movie Info</h1>
<div>
    <dl class="row">
        <dt class="col-sm-3">Movie Name:</dt>
        <dd class="col-sm-9">@Model.Name</dd>
        <dt class="col-sm-3 text-truncate">Genre:</dt>
        <dd class="col-sm-9">@Model.Genre.Name</dd>
    </dl>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Details:</dt>
        <dd class="col-sm-9">
            Release Date: @Model.ReleaseYear<br />
            Description: @Model.Description<br />
        </dd>
    </dl>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Store Information:</dt>
        <dd class="col-sm-9">
            @if (Model.InStock > 0)
            {
                <span class="label label-success">In Stock</span>
            }
            else
            {
                <span class="label label-primary">Out of Stock</span>
            }
            Inventory: <b>@Model.InStock</b><br />
            Added to System: <em>@Model.DateAdded.ToLongDateString()</em>
        </dd>
    </dl>
</div>

